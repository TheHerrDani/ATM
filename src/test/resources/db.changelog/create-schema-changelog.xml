<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <changeSet id="202107182227" author="Daniel Sipos">
        <createTable tableName="account">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="account_id_pk"/>
            </column>
            <column name="account_details" type="varchar(250)"/>
            <column name="account_number" type="bigint"/>
            <column name="pin" type="int"/>
        </createTable>
        <createTable tableName="account_details">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="account_details_id_pk"/>
            </column>
            <column name="actual_balance" type="decimal"/>
            <column name="overdraft" type="decimal"/>
        </createTable>
        <createTable tableName="atm">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="atm_id_pk"/>
            </column>
            <column name="euro_fifty_count" type="bigint"/>
            <column name="euro_twenty_count" type="bigint"/>
            <column name="euro_ten_count" type="bigint"/>
            <column name="euro_five_count" type="bigint"/>
        </createTable>
        <addAutoIncrement tableName="account" columnName="id" columnDataType="bigint" startWith="1"
                          incrementBy="1"/>
        <addAutoIncrement tableName="account_details" columnName="id" columnDataType="bigint"
                          startWith="1"
                          incrementBy="1"/>
        <addAutoIncrement tableName="atm" columnName="id" columnDataType="bigint"
                          startWith="1"
                          incrementBy="1"/>
        <createSequence sequenceName="hibernate_sequence" incrementBy="1" startValue="1"/>

        <addForeignKeyConstraint baseTableName="account" baseColumnNames="account_details"
                                 constraintName="fk_account_details"
                                 referencedTableName="account_details" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>